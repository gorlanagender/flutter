<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-horizontal") do |f| %>
    <div class="row">
      <div class="col-md-6 welcome">
        <%= render 'pages/welcome' %>
      </div>

      <div class="col-md-4">
        <div class="panel panel-default">
          <% if alert.present? %>
            <span class="col-md-12 profile-margin error-text"><%= fa_icon("exclamation-circle") + ' ' + alert %></span>
          <% end %>
          <div class="row sign_in_panel form-group margin-top">
              <%= f.email_field :email, autofocus: true, placeholder: "Phone,Email or Username", class: "form-control" %>
          </div>

          <div class="row sign_in_panel">
            <%= f.password_field :password, autocomplete: "off", placeholder: "Password",class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? -%>
              <div class="row sign_in_panel form-group">
                  <%= f.check_box :remember_me, class: "form-check" %>
                  <%= f.label :remember_me %>
              </div>
          <% end -%>


          <div class="row form-group actions">
            <div class="col-xs-4"></div>
            <div class="col-xs-4"><%= f.submit "Log in", class: "form-control btn btn-primary" %></div>
          </div>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
<% end %>
