<!DOCTYPE html>
<html>
  <head>
    <title>Flutter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <%= render 'layouts/nav' %>
    <% if params[:id].present? %>
      <% url = '/user/' + params[:id] %>
      <% if current_page?(url) %>
        <img src="/banner.jpg" class="profile-banner">
          <div class="panel panel-default">
            <div class="container profile-margin">
              <div class="col-xs-3"></div>
              <div class="col-xs-6">
                <div class="col-xs-4">
                  <div class="row"><span class="text-bold text-muted"><%= "Posts" %></span></div>
                  <div class="row"><span class="text-bold profile-font"><%= current_user.posts.size %></span></div>
                </div>
                <div class="col-md-4">
                <div class="row"><span class="text-bold text-muted"><%= "Followers" %></span></div>
                <div class="row"><span class="text-bold profile-font"><%= current_user.posts.size %></span></div>
                </div>
                <div class="col-md-4 pull-right">
                  <button type="button" class="btn btn-default"><%= link_to("EDIT PROFILE", edit_user_registration_path) %></button>
                </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
    <% if current_page?(controller: 'devise/sessions', action: :new) ||
        current_page?(controller: 'devise/registrations', action: :new) ||
        current_page?(controller: 'devise/passwords', action: :new)
    %>
      <style>
        body {
          background-image: linear-gradient(
              rgba(0, 0, 0, 0.3),
              rgba(0, 0, 0, 0.3)
          ), url("/bg.png");
          -webkit-background-size: cover;
          -moz-background-size: cover;
          -o-background-size: cover;
        }
      </style>
    <% end %>
    <div class="container">
      <span class="notice"><%= notice %></span>
      <span class="alert"><%= alert %></span>
      <%= yield %>
    </div>
  </body>
</html>
