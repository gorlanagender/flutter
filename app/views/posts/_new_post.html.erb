<%= form_for(@new_post) do |f| %>
    <div class="panel panel-body">
      <div class="row col-xs-12">
      <div class="col-xs-1">
        <div class="row">
          <img src="/user2.jpg" , class="img-rounded" style="margin-left: -10px;height: 40px;width: 40px;">
        </div>
      </div>
      <div class="col-xs-11">
        <div class="row">
          <%= f.text_field :content, class: "form-control" %>
        </div>
        <div class="row pull-right" style="margin-top: 10px;">
          <%= f.submit "Add Post", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    </div>
<% end %>