<div class="row profile-panel-margin">
  <div class="col-xs-3">
    <%= image_tag(@user.avatar_url,  class: "img-circle profile-image") %>
    <div class="row col-md-12 top-margin">
      <center>
        <span class="text-bold" style="font-size: 20px;"><%= @user.username %></span>
      </center>
    </div>
  </div>

  <div class="col-xs-6">
    <% @posts.each do |post| %>
        <div class="panel panel-default panel-success post-panel">
          <div class="panel-body row">
            <div class="row">
              <div class="col-xs-2">
                <%= image_tag(@user.avatar_url,  class: "img-circle", style: "margin-left: 12px;height: 60px;width: 60px;") %>
              </div>
              <div class="col-xs-10">
                <div class="row col-xs-12">
                  <span class="text-bold">
                    <%= link_to(post.user.username, url_for("/user/#{post.user.username}")) %>
                  </span>&nbsp;
                  <span class="text-muted"><%= " - #{post.created_at.to_formatted_s(:short)}" %></span>
                </div>
                <div class="row col-xs-12 content-margin">
                  <%= post.content %>
                </div>
              </div>
            </div>
            <div class="row top-margin">
              <span class="col-xs-2"></span>
              <span class="col-xs-2 links"><%= fa_icon("reply") %></span>
              <span class="col-xs-3 links"><%= fa_icon("comment") %></span>
              <span class="col-xs-3 links"><%= fa_icon("heart") %></span>
              <span class="col-xs-2 links"><%= fa_icon("ellipsis-h") %></span>
            </div>
          </div>
        </div>
    <% end %>
    <div class="panel panel-default panel-success post-panel">
      <div class="row footer-panel">
        <span class="col-xs-5"></span>
        <span class="text-bold"><a href="#top"><%= "Back To Top" %> <%= fa_icon("arrow-up") %></a></span>
      </div>
    </div>
  </div>

  <div class="col-xs-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <% @users.each do |user| %>
        <div class="row col-md-12 margin-top">
          <%= link_to(user.username, url_for("/user/#{user.username}")) %>
        </div>
        <% end %>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-body ">
        <div class="text-bold text-muted"><%= "Trends" %></div><br>
        <a href="#">#Trend1</a><br>
        <%= "35k posts" %></span><br>
        <a href="#">#Trend2</a><br>
        <%= "25k posts" %></span><br>
        <a href="#">#Trend3</a><br>
        <%= "75k posts" %></span><br>
        <a href="#">#Trend4</a><br>
        <%= "45k posts" %></span><br>
      </div>
    </div>
  </div>
</div>

