<div class="jumbotron">
  <h1><%= @user_name %></h1>
</div>

<div class="row">
  <div class="col-xs-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <p>Profile</p>
      </div>
    </div>
  </div>

  <div class="col-xs-6">
    <% @posts.each do |post| %>
    <div class="panel panel-default">
      <div class="panel-body">
        <p><%= post.content %></p>
      </div>
    </div>
    <% end %>
  </div>

  <div class="col-xs-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <p>About To Follow</p>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-3 col-xs-offset-9">
    <div class="panel panel-default">
      <div class="panel-body">
        <p>Trends</p>
      </div>
    </div>
  </div>
</div>

