<% @posts.each do |post| %>
    <div class="panel panel-default panel-success post-panel">
      <div class="panel-body row">
        <div class="row">
          <div class="col-xs-2">
            <%= image_tag(post.avatar,  class: "image img-circle", style: "margin-left: 12px;height: 60px;width: 60px;") %>
          </div>
          <div class="col-xs-10">
            <div class="row col-xs-12">
                  <span class="text-bold">
                    <%= link_to(post.post_name, url_for("/user/#{post.post_name}")) %>
                  </span>&nbsp;
              <span class="text-muted"><%= post.display_time %></span>
            </div>
            <div class="row col-xs-12 content-margin">
              <%= post.content %>
            </div>
          </div>
        </div>
        <div class="row top-margin">
          <span class="col-xs-2"></span>
          <span class="col-xs-2 links"><%= fa_icon("reply") %></span>
          <span class="col-xs-2 links"><%= fa_icon("comment") %></span>
          <span class="col-xs-2 links"><%= fa_icon("heart") %></span>
          <span class="col-xs-2 links"><%= fa_icon("ellipsis-h") %></span>
        </div>
      </div>
    </div>
<% end %>