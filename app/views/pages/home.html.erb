<div class="row">
  <div class="col-xs-3">
    <div class="panel panel-default">
      <img src="/banner.jpg" , class="img-responsive">
      <div class="row">
        <div class="col-xs-2">
          <img src="/user2.jpg" , class="img-rounded" style="margin-left: 10px;margin-top: -20px;height: 50px;width: 50px;">
        </div>
        <div class="col-xs-1"></div>
        <div class="col-xs-8" style="margin-top: 10px;">
          <h3 class="text-bold "><%= current_user.username %></h3>
        </div>
      </div>
      <div class="row home-margin">
        <div class="col-xs-6">
          <div class="row">
            <div class="col-xs-4"></div>
            <span class="text-bold text-muted"><%= "Posts" %></span>
          </div>
          <div class="row">
            <div class="col-xs-5"></div>
            <span class="text-bold profile-font"><%= current_user.posts.size %></span>
          </div>
        </div>
        <div class="col-md-6">
          <div class="row">
            <div class="col-xs-1"></div>
            <span class="text-bold text-muted"><%= "Followers" %></span>
          </div>
          <div class="row">
            <div class="col-xs-4"></div>
            <span class="text-bold profile-font">
              <%= current_user.posts.size %>
            </span>
          </div>
        </div>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-body ">
        <div class="text-bold text-muted"><%= "Trends" %></div><br>
        <a href="#">#Trend1</a><br>
        <%= "35k posts" %></span><br>
        <a href="#">#Trend2</a><br>
        <%= "25k posts" %></span><br>
        <a href="#">#Trend3</a><br>
        <%= "75k posts" %></span><br>
        <a href="#">#Trend4</a><br>
        <%= "45k posts" %></span><br>
      </div>
    </div>
  </div>

  <div class="col-xs-6">
    <%= render 'posts/new_post' %>
    <% @posts.each do |post| %>
        <div class="panel panel-default post-panel">
          <div class="panel-body row">
            <div class="row">
              <div class="col-xs-1">
                <img src="/user2.jpg" , class="img-rounded" style="margin-left: 5px;height: 40px;width: 40px;">
              </div>
              <div class="col-xs-11">
                <div class="row col-xs-12">
                  <span class="text-bold"><%= post.user.username %></span>&nbsp;
                  <span class="text-muted"><%= " - #{post.created_at.to_formatted_s(:short)}" %></span>
                </div>
                <div class="row col-xs-12 content-margin">
                  <%= post.content %>
                </div>
              </div>
            </div>
            <div class="row top-margin">
              <span class="col-xs-1"></span>
              <span class="col-xs-2 links"><%= fa_icon("reply") %></span>
              <span class="col-xs-2 links"><%= fa_icon("comment") %></span>
              <span class="col-xs-2 links"><%= fa_icon("heart") %></span>
              <span class="col-xs-1 links"><%= fa_icon("ellipsis-h") %></span>
              <span class="col-xs-4"><a href="#"><%= "View Conversation" %></a></span>
            </div>
          </div>
        </div>
    <% end %>
    <div class="panel panel-default post-panel">
      <div class="row footer-panel">
        <span class="col-xs-5"></span>
        <span class="text-bold"><a href="#top"><%= "Back To Top" %> <%= fa_icon("arrow-up") %></a></span>
      </div>
    </div>
  </div>

  <div class="col-xs-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <span class="links">@2017 TwitterNew About Help Terms Privacy Cookies Ads
          Info Brand Blog Status Apps Jobs Advertise Business Media Developers </span>
      </div>
    </div>
  </div>
</div>
